.row
  .col-md-10.col-md-offset-1.well
    form.form-horizontal.text-center name='form'
      .form-group.col-md-6
        input.form-control ng-model='record.code' placeholder='{{"code" | translate}}' title='{{"code" | translate}}' required=''
      .form-group.col-md-6
        label
          | {{'available' | translate}}
        .btn-group
          button.btn.btn-primary type='button' ng-model='record.available' btn-radio='n' ng-repeat='n in [true, false]' required=''
            | {{yesno[n] | translate}}
      .form-group.col-md-6
        label
          | {{'charge' | translate}}
        .btn-group
          button.btn.btn-primary type='button' ng-model='record.charge' btn-radio='n' ng-repeat='n in [true, false]' required=''
            | {{yesno[n] | translate}}
      .form-group.col-md-12
        label
          | {{'result' | translate}}
        .btn-group
          button.btn.btn-primary type='button' ng-model='record.result' btn-radio='r' ng-repeat='r in results' required=''
            | {{r | translate}}
      .form-group.col-md-12
        textarea.form-control ng-model='record.remark' placeholder='{{"remark" | translate}}' title='{{"remark" | translate}}'
      .form-group.col-md-12
        label
          | {{'rework' | translate}}{{'board_head' | translate}}
        .btn-group
          button.btn.btn-primary type='button' ng-model='record.board_head' btn-radio='h' ng-repeat='h in board_heads'
            | {{h.name}}
      .form-group.col-md-12
        button.btn.btn-success ng-click='save()' ng-disabled='!form.$valid' ng-bind='"save" | translate'
