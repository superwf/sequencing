/the css below is for fix the input and btn is in front of the datepicker
css:
  .input-group .form-control{
    z-index: 1;
  }
  .btn-group > .btn.active, .btn-group > .btn {
    z-index: 1;
  }
.row
  .well ng-class="{true: 'col-md-10 col-md-offset-1', false: 'col-md-12'}[inModal]"
    form.form-horizontal.text-center name='form'
      .form-group.col-md-3
        input.form-control ng-model='record.create_date' placeholder='{{"receive" | translate}}{{"date" | translate}}' title='{{"receive" | translate}}{{"date" | translate}}' ui-date='dateOption' ui-date-format='yy-mm-dd' required=''
      .form-group.col-md-1
        input.form-control ng-model='record.number' placeholder='{{"number" | translate}}' title='{{"number" | translate}}' type='number' required=''
      .form-group.col-md-2
        label
          | {{'urgent' | translate}}
        .btn-group
          button.btn.btn-primary type='button' ng-model='record.urgent' btn-radio='n' ng-repeat='n in [false, true]'
            | {{yesno[n] | translate}}
      .form-group.col-md-2
        label
          | {{'is_test' | translate}}
        .btn-group
          button.btn.btn-primary type='button' ng-model='record.is_test' btn-radio='n' ng-repeat='n in [false, true]'
            | {{yesno[n] | translate}}
      .form-group.col-md-3
        input.form-control ng-model='record.client' placeholder='{{"client" | translate}}' title='{{"client" | translate}}' ng-focus='selectClient()' required=''
      ng-include src="inModal ? null : '/views/newOrderBoard.html'"
      .form-group.col-md-12
        textarea.form-control ng-model='record.remark' placeholder='{{"remark" | translate}}' title='{{"remark" | translate}}'
      .form-group.col-md-12
        button.btn.btn-success ng-click='save()' ng-bind='"save" | translate' ng-disabled='!form.$valid'
